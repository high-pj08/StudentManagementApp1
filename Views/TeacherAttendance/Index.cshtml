@model StudentManagementApp.ViewModels.MarkAttendanceViewModel

@{
    ViewData["Title"] = "Mark Attendance";
}

<h1 class="text-3xl font-bold text-gray-800 mb-6">Mark Attendance</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4 rounded-md" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4 rounded-md" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<div class="bg-white p-6 rounded-lg shadow-md max-w-lg mx-auto">
    <form asp-action="MarkAttendance" method="post">
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-4"></div>

        <div class="mb-4">
            <label asp-for="ClassId" class="block text-gray-700 text-sm font-bold mb-2"></label>
            <select asp-for="ClassId" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" asp-items="Model.AssignedClasses">
                <option value="">-- Select Class --</option>
            </select>
            <span asp-validation-for="ClassId" class="text-red-600 text-xs italic"></span>
        </div>
        <div class="mb-4">
            <label asp-for="SubjectId" class="block text-gray-700 text-sm font-bold mb-2"></label>
            <select asp-for="SubjectId" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" asp-items="Model.AssignedSubjects">
                <option value="">-- Select Subject --</option>
            </select>
            <span asp-validation-for="SubjectId" class="text-red-600 text-xs italic"></span>
        </div>
        <div class="mb-4">
            <label asp-for="AttendanceDate" class="block text-gray-700 text-sm font-bold mb-2"></label>
            <input asp-for="AttendanceDate" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
            <span asp-validation-for="AttendanceDate" class="text-red-600 text-xs italic"></span>
        </div>

        <div class="flex items-center justify-between">
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition-colors duration-200">
                Load Students for Attendance
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
