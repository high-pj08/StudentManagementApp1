@model StudentManagementApp.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Schools Management System Dashboard</h1>

    <!-- Quick Icon Section -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
        <div class="bg-red-500 text-white p-6 rounded-lg shadow-md flex items-center justify-between">
            <div>
                <h2 class="text-xl font-semibold">Total Students</h2>
                <p class="text-4xl font-bold">@Model.TotalStudents</p>
            </div>
            <i class="fas fa-user-graduate text-5xl opacity-75"></i>
        </div>
        <div class="bg-green-500 text-white p-6 rounded-lg shadow-md flex items-center justify-between">
            <div>
                <h2 class="text-xl font-semibold">Total Teachers</h2>
                <p class="text-4xl font-bold">@Model.TotalTeachers</p>
            </div>
            <i class="fas fa-chalkboard-teacher text-5xl opacity-75"></i>
        </div>
        <div class="bg-blue-500 text-white p-6 rounded-lg shadow-md flex items-center justify-between">
            <div>
                <h2 class="text-xl font-semibold">Total Users</h2>
                <p class="text-4xl font-bold">@Model.TotalUsers</p>
            </div>
            <i class="fas fa-users text-5xl opacity-75"></i>
        </div>
    </div>

    <!-- Quick Icons Grid -->
    <h2 class="text-2xl font-semibold text-gray-800 mb-6">Schools Management System Quick Icons</h2>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6 gap-4">
        <a asp-controller="Home" asp-action="Index" class="dashboard-card bg-white p-6 rounded-lg shadow-md hover:shadow-lg flex flex-col items-center justify-center text-center">
            <i class="fas fa-tachometer-alt text-4xl text-blue-600 mb-3"></i>
            <span class="text-lg font-medium text-gray-700">Dashboard</span>
        </a>
        <a asp-area="Identity" asp-page="/Account/Login" class="dashboard-card bg-white p-6 rounded-lg shadow-md hover:shadow-lg flex flex-col items-center justify-center text-center">
            <i class="fas fa-sign-in-alt text-4xl text-green-600 mb-3"></i>
            <span class="text-lg font-medium text-gray-700">Login</span>
        </a>
        <a asp-controller="Admin" asp-action="Index" class="dashboard-card bg-white p-6 rounded-lg shadow-md hover:shadow-lg flex flex-col items-center justify-center text-center">
            <i class="fas fa-shield-alt text-4xl text-red-600 mb-3"></i>
            <span class="text-lg font-medium text-gray-700">Admin</span>
        </a>
        <a asp-controller="Teachers" asp-action="Index" class="dashboard-card bg-white p-6 rounded-lg shadow-md hover:shadow-lg flex flex-col items-center justify-center text-center">
            <i class="fas fa-chalkboard-teacher text-4xl text-purple-600 mb-3"></i>
            <span class="text-lg font-medium text-gray-700">Teacher</span>
        </a>
        <a asp-controller="Students" asp-action="Index" class="dashboard-card bg-white p-6 rounded-lg shadow-md hover:shadow-lg flex flex-col items-center justify-center text-center">
            <i class="fas fa-user-graduate text-4xl text-yellow-600 mb-3"></i>
            <span class="text-lg font-medium text-gray-700">Student</span>
        </a>
        <a href="#" class="dashboard-card bg-white p-6 rounded-lg shadow-md hover:shadow-lg flex flex-col items-center justify-center text-center">
            <i class="fas fa-users text-4xl text-gray-600 mb-3"></i>
            <span class="text-lg font-medium text-gray-700">Parents</span>
        </a>
        <a href="#" class="dashboard-card bg-white p-6 rounded-lg shadow-md hover:shadow-lg flex flex-col items-center justify-center text-center">
            <i class="fas fa-book text-4xl text-gray-600 mb-3"></i>
            <span class="text-lg font-medium text-gray-700">Subjects</span>
        </a>
        <a href="#" class="dashboard-card bg-white p-6 rounded-lg shadow-md hover:shadow-lg flex flex-col items-center justify-center text-center">
            <i class="fas fa-school text-4xl text-gray-600 mb-3"></i>
            <span class="text-lg font-medium text-gray-700">Class</span>
        </a>
        <a href="#" class="dashboard-card bg-white p-6 rounded-lg shadow-md hover:shadow-lg flex flex-col items-center justify-center text-center">
            <i class="fas fa-clipboard-check text-4xl text-gray-600 mb-3"></i>
            <span class="text-lg font-medium text-gray-700">Attendance</span>
        </a>
        <a href="#" class="dashboard-card bg-white p-6 rounded-lg shadow-md hover:shadow-lg flex flex-col items-center justify-center text-center">
            <i class="fas fa-file-alt text-4xl text-gray-600 mb-3"></i>
            <span class="text-lg font-medium text-gray-700">Exams</span>
        </a>
        <a href="#" class="dashboard-card bg-white p-6 rounded-lg shadow-md hover:shadow-lg flex flex-col items-center justify-center text-center">
            <i class="fas fa-clipboard-list text-4xl text-gray-600 mb-3"></i>
            <span class="text-lg font-medium text-gray-700">Exams Marks</span>
        </a>
        <a href="#" class="dashboard-card bg-white p-6 rounded-lg shadow-md hover:shadow-lg flex flex-col items-center justify-center text-center">
            <i class="fas fa-money-bill-wave text-4xl text-gray-600 mb-3"></i>
            <span class="text-lg font-medium text-gray-700">Payments</span>
        </a>
        <a href="#" class="dashboard-card bg-white p-6 rounded-lg shadow-md hover:shadow-lg flex flex-col items-center justify-center text-center">
            <i class="fas fa-calculator text-4xl text-gray-600 mb-3"></i>
            <span class="text-lg font-medium text-gray-700">Accounting</span>
        </a>
        <a href="#" class="dashboard-card bg-white p-6 rounded-lg shadow-md hover:shadow-lg flex flex-col items-center justify-center text-center">
            <i class="fas fa-book-open text-4xl text-gray-600 mb-3"></i>
            <span class="text-lg font-medium text-gray-700">Library</span>
        </a>
        <a href="#" class="dashboard-card bg-white p-6 rounded-lg shadow-md hover:shadow-lg flex flex-col items-center justify-center text-center">
            <i class="fas fa-bus text-4xl text-gray-600 mb-3"></i>
            <span class="text-lg font-medium text-gray-700">Transport</span>
        </a>
    </div>

    <!-- Notices and Holidays -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-12">
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-2xl font-semibold text-gray-800 mb-4 flex items-center">
                <i class="fas fa-bullhorn text-blue-500 mr-3"></i> Latest Notices
            </h2>
            @if (!Model.ActiveNotices.Any())
            {
                <p class="text-gray-600">No active notices at the moment.</p>
            }
            else
            {
                <ul class="list-disc pl-5 space-y-3">
                    @foreach (var notice in Model.ActiveNotices)
                    {
                        <li class="text-gray-700">
                            <span class="font-semibold">@notice.Title</span> -
                            <span class="text-sm text-gray-500">@notice.PublishDate.ToShortDateString()</span>
                            <p class="text-sm mt-1">@Html.Raw(notice.Content)</p>
                        </li>
                    }
                </ul>
            }
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-2xl font-semibold text-gray-800 mb-4 flex items-center">
                <i class="fas fa-calendar-alt text-green-500 mr-3"></i> Upcoming Holidays
            </h2>
            @if (!Model.UpcomingHolidays.Any())
            {
                <p class="text-gray-600">No upcoming holidays announced.</p>
            }
            else
            {
                <ul class="list-disc pl-5 space-y-3">
                    @foreach (var holiday in Model.UpcomingHolidays)
                    {
                        <li class="text-gray-700">
                            <span class="font-semibold">@holiday.Title</span> -
                            <span class="text-sm text-gray-500">@holiday.HolidayDate.ToShortDateString()</span>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>
</div>
