@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = $"Delete Role: {Model.Name}";
}

<h1 class="text-3xl font-bold text-gray-800 mb-6">Delete Role</h1>

<div class="bg-white p-6 rounded-lg shadow-md max-w-md mx-auto">
    <h3 class="text-lg font-semibold text-gray-800 mb-4">Are you sure you want to delete this role?</h3>
    <p class="text-red-600 mb-4">Deleting a role will remove it from all users who currently have it.</p>

    <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-4 gap-y-2 mb-6">
        <dt class="text-gray-700 font-medium">Role Name:</dt>
        <dd class="text-gray-900">@Html.DisplayFor(model => model.Name)</dd>
    </dl>

    <form asp-action="DeleteRole" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="flex items-center justify-between">
            <button type="submit" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition-colors duration-200">
                Delete
            </button>
            <a asp-action="ManageUsers" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">
                Back to User Management
            </a>
        </div>
    </form>
</div>
