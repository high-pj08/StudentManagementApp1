@model StudentManagementApp.Models.Subject

@{
    ViewData["Title"] = "Delete Subject";
}

<h1 class="text-3xl font-bold text-gray-800 mb-6">Delete Subject</h1>

<div class="bg-white p-6 rounded-lg shadow-md max-w-lg mx-auto">
    <h3 class="text-lg font-semibold text-gray-800 mb-4">Are you sure you want to delete this subject?</h3>
    <p class="text-red-600 mb-4">This will permanently remove the subject record.</p>

    <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-4 gap-y-2 mb-6">
        <dt class="text-gray-700 font-medium">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="text-gray-900">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="text-gray-700 font-medium">@Html.DisplayNameFor(model => model.Code)</dt>
        <dd class="text-gray-900">@Html.DisplayFor(model => model.Code)</dd>
    </dl>

    <form asp-action="DeleteSubject" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="flex items-center justify-between">
            <button type="submit" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition-colors duration-200">
                Delete
            </button>
            <a asp-action="ManageSubjects" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">Back to List</a>
        </div>
    </form>
</div>
