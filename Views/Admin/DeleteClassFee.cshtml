@model StudentManagementApp.ViewModels.ClassFeeViewModel

@{
    ViewData["Title"] = "Delete Class Fee";
}

<h1 class="text-3xl font-bold text-gray-800 mb-6">Delete Class Fee</h1>

<h3 class="text-lg text-red-600 mb-4">Are you sure you want to delete this Class Fee assignment?</h3>
<div class="bg-white p-6 rounded-lg shadow-md max-w-lg mx-auto">
    <dl class="row mb-4">
        <dt class="col-sm-4 text-gray-700 font-bold">
            @Html.DisplayNameFor(model => model.ClassName)
        </dt>
        <dd class="col-sm-8 text-gray-900">
            @Html.DisplayFor(model => model.ClassName)
        </dd>
        <dt class="col-sm-4 text-gray-700 font-bold">
            @Html.DisplayNameFor(model => model.FeeTypeName)
        </dt>
        <dd class="col-sm-8 text-gray-900">
            @Html.DisplayFor(model => model.FeeTypeName)
        </dd>
        <dt class="col-sm-4 text-gray-700 font-bold">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="col-sm-8 text-gray-900">
            @Model.Amount.ToString("C")
        </dd>
        <dt class="col-sm-4 text-gray-700 font-bold">
            @Html.DisplayNameFor(model => model.EffectiveDate)
        </dt>
        <dd class="col-sm-8 text-gray-900">
            @Html.DisplayFor(model => model.EffectiveDate)
        </dd>
    </dl>

    <form asp-action="DeleteClassFee">
        <input type="hidden" asp-for="Id" />
        <div class="flex items-center justify-between mt-6">
            <button type="submit" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition-colors duration-200">
                Delete
            </button>
            <a asp-action="ManageClassFees" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">
                Back to List
            </a>
        </div>
    </form>
</div>
