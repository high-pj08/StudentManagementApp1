@model StudentManagementApp.ViewModels.StudentDashboardViewModel

@{
    ViewData["Title"] = "My Dashboard";
}

<h1 class="text-3xl font-bold text-gray-800 mb-6">Student Dashboard</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4 rounded-md" role="alert">
        @TempData["ErrorMessage"]
    </div>
}
@if (TempData["WarningMessage"] != null)
{
    <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4 mb-4 rounded-md" role="alert">
        @TempData["WarningMessage"]
    </div>
}

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

    <div class="bg-white p-6 rounded-lg shadow-md col-span-1 lg:col-span-2">
        <h2 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
            <i class="fas fa-user-circle mr-3 text-blue-500"></i> My Profile
        </h2>
        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-x-4 gap-y-2 text-sm">
            <dt class="text-gray-600">Full Name:</dt>
            <dd class="font-medium text-gray-900">@Model.FullName</dd>

            <dt class="text-gray-600">Email:</dt>
            <dd class="font-medium text-gray-900">@Model.Email</dd>

            <dt class="text-gray-600">Date of Birth:</dt>
            <dd class="font-medium text-gray-900">@Model.DateOfBirth.ToString("dd-MMM-yyyy")</dd>

            <dt class="text-gray-600">Admission Date:</dt>
            <dd class="font-medium text-gray-900">@Model.AdmissionDate.ToString("dd-MMM-yyyy")</dd>

            <dt class="text-gray-600">Current Class:</dt>
            <dd class="font-medium text-gray-900">@Model.CurrentClassName</dd>
        </dl>
    </div>

    <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
            <i class="fas fa-chart-bar mr-3 text-green-500"></i> Attendance Summary
        </h2>
        <div class="text-center mb-4">
            <p class="text-5xl font-bold @(Model.AttendancePercentage >= 75 ? "text-green-600" : Model.AttendancePercentage >= 50 ? "text-yellow-600" : "text-red-600")">
                @Model.AttendancePercentage.ToString("0.0")%
            </p>
            <p class="text-gray-600">Overall Attendance</p>
        </div>
        <ul class="text-sm text-gray-700 space-y-1">
            <li>Total Recorded Days: <span class="font-semibold">@Model.TotalAttendanceDays</span></li>
            <li>Present Days: <span class="font-semibold text-green-600">@Model.PresentDays</span></li>
            <li>Absent Days: <span class="font-semibold text-red-600">@Model.AbsentDays</span></li>
        </ul>
        <div class="mt-4 text-right">
            <a asp-controller="StudentAttendance" asp-action="ViewMyAttendance" class="text-blue-600 hover:underline text-sm">View Full Attendance History &rarr;</a>
        </div>
    </div>

    <div class="bg-white p-6 rounded-lg shadow-md col-span-1 md:col-span-2 lg:col-span-1">
        <h2 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
            <i class="fas fa-book-open mr-3 text-purple-500"></i> Enrolled Subjects
        </h2>
        @if (!Model.Enrollments!.Any())
        {
            <p class="text-gray-600">No active subject enrollments found.</p>
        }
        else
        {
            <ul class="list-disc list-inside space-y-1 text-gray-700">
                @foreach (var enrollment in Model.Enrollments)
                {
                    <li>@enrollment.Subject!.Name (@enrollment.Class!.NameWithSection)</li>
                }
            </ul>
        }
    </div>

    <div class="bg-white p-6 rounded-lg shadow-md col-span-1">
        <h2 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
            <i class="fas fa-percent mr-3 text-orange-500"></i> Subject Averages
        </h2>
        @if (!Model.SubjectAverages!.Any())
        {
            <p class="text-gray-600">No subject averages available yet.</p>
        }
        else
        {
            <ul class="space-y-2">
                @foreach (var avg in Model.SubjectAverages)
                {
                    <li class="flex justify-between items-center text-gray-700">
                        <span>@avg.Key:</span>
                        <span class="font-semibold @(avg.Value >= 60 ? "text-green-600" : avg.Value >= 40 ? "text-yellow-600" : "text-red-600")">@avg.Value.ToString("0.00")%</span>
                    </li>
                }
            </ul>
        }
    </div>


    <div class="bg-white p-6 rounded-lg shadow-md col-span-1 md:col-span-2">
        <h2 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
            <i class="fas fa-clipboard-list mr-3 text-indigo-500"></i> Recent Exam Marks
        </h2>
        @if (!Model.RecentMarks!.Any())
        {
            <p class="text-gray-600">No recent exam marks recorded.</p>
        }
        else
        {
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Exam</th>
                            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Subject</th>
                            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Marks</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var mark in Model.RecentMarks)
                        {
                            <tr>
                                <td class="px-4 py-2 whitespace-nowrap">@mark.Exam!.Name</td>
                                <td class="px-4 py-2 whitespace-nowrap">@mark.Exam.Subject!.Name</td>
                                <td class="px-4 py-2 whitespace-nowrap">@mark.Exam.ExamDate.ToString("dd-MMM-yyyy")</td>
                                <td class="px-4 py-2 whitespace-nowrap">@mark.MarksObtained / @(mark.Exam.MaxMarks ?? 100)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="mt-4 text-right">
                <a asp-controller="StudentMarks" asp-action="ViewMyMarks" class="text-blue-600 hover:underline text-sm">View All Marks &rarr;</a>
            </div>
        }
    </div>

    <div class="bg-white p-6 rounded-lg shadow-md col-span-1 md:col-span-1">
        <h2 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
            <i class="fas fa-calendar-alt mr-3 text-red-500"></i> Upcoming Exams
        </h2>
        @if (!Model.UpcomingExams!.Any())
        {
            <p class="text-gray-600">No upcoming exams scheduled.</p>
        }
        else
        {
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Exam</th>
                            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Subject</th>
                            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var exam in Model.UpcomingExams)
                        {
                            <tr>
                                <td class="px-4 py-2 whitespace-nowrap">@exam.Name</td>
                                <td class="px-4 py-2 whitespace-nowrap">@exam.Subject!.Name</td>
                                <td class="px-4 py-2 whitespace-nowrap">@exam.ExamDate.ToString("dd-MMM-yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>

</div>

