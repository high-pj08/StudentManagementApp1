@model StudentManagementApp.ViewModels.ParentDashboardViewModel

@{
    ViewData["Title"] = "Parent Dashboard";
}

<h1 class="text-3xl font-bold text-gray-800 mb-6">Welcome, @Model.ParentFullName!</h1>
<h2 class="text-xl text-gray-700 mb-8">Your Children's Overview</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4 rounded-md" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

@if (!Model.Children.Any())
{
    <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4 mb-8 rounded-md" role="alert">
        <p>No children are linked to your account yet. Please contact the school administration to link your child/children.</p>
    </div>
}
else
{
    @foreach (var child in Model.Children)
    {
        <div class="bg-white p-6 rounded-lg shadow-md mb-8">
            <h3 class="text-2xl font-semibold text-blue-700 mb-4 flex items-center">
                <i class="fas fa-child mr-3"></i> @child.StudentFullName
                <span class="ml-auto text-lg text-gray-600">Class: @child.ClassNameWithSection</span>
            </h3>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-4">

                <!-- Child Profile Overview -->
                <div class="bg-gray-50 p-4 rounded-lg shadow-sm col-span-1">
                    <h4 class="text-lg font-medium text-gray-800 mb-3 flex items-center">
                        <i class="fas fa-info-circle mr-2 text-blue-500"></i> Basic Info
                    </h4>
                    <dl class="text-sm">
                        <dt class="text-gray-600">Email:</dt>
                        <dd class="font-medium text-gray-900 mb-2">@child.StudentEmail</dd>
                        @* Add more student profile details here if available in ChildDashboardViewModel *@
                    </dl>
                </div>

                <!-- Attendance Summary Card -->
                <div class="bg-gray-50 p-4 rounded-lg shadow-sm col-span-1">
                    <h4 class="text-lg font-medium text-gray-800 mb-3 flex items-center">
                        <i class="fas fa-chart-bar mr-2 text-green-500"></i> Attendance
                    </h4>
                    <div class="text-center mb-3">
                        <p class="text-4xl font-bold @(child.AttendancePercentage >= 75 ? "text-green-600" : child.AttendancePercentage >= 50 ? "text-yellow-600" : "text-red-600")">
                            @child.AttendancePercentage.ToString("0.0")%
                        </p>
                        <p class="text-gray-600 text-sm">Overall Attendance</p>
                    </div>
                    <ul class="text-xs text-gray-700 space-y-1">
                        <li>Total Recorded Days: <span class="font-semibold">@child.TotalAttendanceDays</span></li>
                        <li>Present Days: <span class="font-semibold text-green-600">@child.PresentDays</span></li>
                        <li>Absent Days: <span class="font-semibold text-red-600">@child.AbsentDays</span></li>
                    </ul>
                    <div class="mt-3 text-right">
                        <a asp-controller="StudentAttendance" asp-action="ViewMyAttendance" asp-route-id="@child.StudentId" class="text-blue-600 hover:underline text-xs">View Full History &rarr;</a>
                    </div>
                </div>

                <!-- Recent Marks Card -->
                <div class="bg-gray-50 p-4 rounded-lg shadow-sm col-span-1">
                    <h4 class="text-lg font-medium text-gray-800 mb-3 flex items-center">
                        <i class="fas fa-clipboard-list mr-2 text-indigo-500"></i> Recent Marks
                    </h4>
                    @if (!child.RecentMarks!.Any())
                    {
                        <p class="text-gray-600 text-sm">No recent marks recorded.</p>
                    }
                    else
                    {
                        <div class="overflow-x-auto">
                            <table class="min-w-full divide-y divide-gray-200 text-sm">
                                <thead class="bg-gray-100">
                                    <tr>
                                        <th class="px-2 py-1 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Exam</th>
                                        <th class="px-2 py-1 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Subject</th>
                                        <th class="px-2 py-1 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Marks</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200">
                                    @foreach (var mark in child.RecentMarks)
                                    {
                                        <tr>
                                            <td class="px-2 py-1 whitespace-nowrap">@mark.Exam!.Name</td>
                                            <td class="px-2 py-1 whitespace-nowrap">@mark.Exam.Subject!.Name</td>
                                            <td class="px-2 py-1 whitespace-nowrap">@mark.MarksObtained / @(mark.Exam.MaxMarks ?? 100)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="mt-3 text-right">
                            <a asp-controller="StudentMarks" asp-action="ViewMyMarks" asp-route-id="@child.StudentId" class="text-blue-600 hover:underline text-xs">View All Marks &rarr;</a>
                        </div>
                    }
                </div>

                <!-- Subject Averages Card -->
                <div class="bg-gray-50 p-4 rounded-lg shadow-sm col-span-1">
                    <h4 class="text-lg font-medium text-gray-800 mb-3 flex items-center">
                        <i class="fas fa-percent mr-2 text-orange-500"></i> Subject Averages
                    </h4>
                    @if (!child.SubjectAverages!.Any())
                    {
                        <p class="text-gray-600 text-sm">No subject averages available yet.</p>
                    }
                    else
                    {
                        <ul class="text-sm space-y-1">
                            @foreach (var avg in child.SubjectAverages)
                            {
                                <li class="flex justify-between items-center text-gray-700">
                                    <span>@avg.Key:</span>
                                    <span class="font-semibold @(avg.Value >= 60 ? "text-green-600" : avg.Value >= 40 ? "text-yellow-600" : "text-red-600")">@avg.Value.ToString("0.00")%</span>
                                </li>
                            }
                        </ul>
                    }
                </div>

                <!-- Upcoming Exams Card -->
                <div class="bg-gray-50 p-4 rounded-lg shadow-sm col-span-1 lg:col-span-2">
                    <h4 class="text-lg font-medium text-gray-800 mb-3 flex items-center">
                        <i class="fas fa-calendar-alt mr-2 text-red-500"></i> Upcoming Exams
                    </h4>
                    @if (!child.UpcomingExams!.Any())
                    {
                        <p class="text-gray-600 text-sm">No upcoming exams scheduled.</p>
                    }
                    else
                    {
                        <div class="overflow-x-auto">
                            <table class="min-w-full divide-y divide-gray-200 text-sm">
                                <thead class="bg-gray-100">
                                    <tr>
                                        <th class="px-2 py-1 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Exam</th>
                                        <th class="px-2 py-1 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Subject</th>
                                        <th class="px-2 py-1 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200">
                                    @foreach (var exam in child.UpcomingExams)
                                    {
                                        <tr>
                                            <td class="px-2 py-1 whitespace-nowrap">@exam.Name</td>
                                            <td class="px-2 py-1 whitespace-nowrap">@exam.Subject!.Name</td>
                                            <td class="px-2 py-1 whitespace-nowrap">@exam.ExamDate.ToString("dd-MMM-yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>

            </div>
        </div>
    }
}
