@{
    ViewData["Title"] = "Profile Not Found";
}

<h1 class="text-3xl font-bold text-gray-800 mb-6">Profile Not Found</h1>

<div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
    <strong class="font-bold">Error!</strong>
    <span class="block sm:inline">Your parent profile could not be loaded. @TempData["ErrorMessage"]</span>
    <p class="mt-2">Please contact the school administration for assistance.</p>
</div>