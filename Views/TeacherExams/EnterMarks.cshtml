@model StudentManagementApp.ViewModels.EnterMarksViewModel

@{
    ViewData["Title"] = "Enter Marks";
}

<h1 class="text-3xl font-bold text-gray-800 mb-6">Enter Marks for @Model.ExamName</h1>
<h2 class="text-2xl font-semibold text-gray-700 mb-4">Class: @Model.ClassName | Subject: @Model.SubjectName | Max Marks: @(Model.MaxMarks.HasValue? Model.MaxMarks.Value.ToString() : "N/A")</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4 rounded-md" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4 rounded-md" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<div class="bg-white p-6 rounded-lg shadow-md overflow-x-auto">
    <form asp-action="SaveMarks" method="post">
        <input type="hidden" asp-for="ExamId" />
        <input type="hidden" asp-for="ClassId" />
        <input type="hidden" asp-for="SubjectId" />
        <input type="hidden" asp-for="MaxMarks" /> @* Pass MaxMarks back for server-side validation *@

        @if (!Model.Students.Any())
        {
            <p class="text-gray-600 text-center py-4">No active students found for this class. Please ensure students are enrolled in this class.</p>
        }
        else
        {
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Student Name
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Marks Obtained
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Validation
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @for (int i = 0; i < Model.Students.Count; i++)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">
                                @Html.DisplayFor(modelItem => Model.Students[i].StudentName)
                                <input type="hidden" asp-for="Students[i].StudentId" />
                                <input type="hidden" asp-for="Students[i].StudentName" />
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <input asp-for="Students[i].MarksObtained" type="number" class="shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline w-24" min="0" max="@(Model.MaxMarks ?? 1000)" />
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span asp-validation-for="Students[i].MarksObtained" class="text-red-600 text-xs italic"></span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="flex items-center justify-between mt-6">
                <button type="submit" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition-colors duration-200">
                    Save Marks
                </button>
                <a asp-action="Index" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">
                    Back to Exams
                </a>
            </div>
        }
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
